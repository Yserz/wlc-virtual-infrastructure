#!bin/sh

URL="http://google.de/"
# test if first param is null
if test -n "$1" ; then
	URL=$1
fi

if [[ $OSTYPE =~ ^darwin ]]; then
	echo "I'm a Mac"
	open $URL
elif [[ $OSTYPE =~ ^cygwin ]] ; then
	echo "I'm a Windows"
	cygstart $URL
elif [[ $OSTYPE =~ ^mingw ]] || [[ $OSTYPE =~ ^mswin ]] ; then
	echo "I'm a Windows"
	start $URL
elif [[ $OSTYPE =~ ^linux ]] ; then
	echo "I'm a unix"
	xdg-open $URL
fi
exit 0